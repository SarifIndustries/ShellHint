<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forensic_drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForensicActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/toolbar"
            android:id="@+id/toolbar"/>

        <FrameLayout
            android:id="@+id/forensic_content_framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>


    <android.support.design.widget.NavigationView
        android:layout_gravity="start"
        app:headerLayout="@layout/panel_forensic_header"
        app:menu="@menu/forensic_panel_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/forensic_panelView"/>

</android.support.v4.widget.DrawerLayout>